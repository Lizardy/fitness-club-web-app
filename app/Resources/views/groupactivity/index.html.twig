{% extends 'base.html.twig' %}

{% block body %}
    <h1>Group activities list</h1>

    <table class="table table-hover table-responsive">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th width="20%">Number of subscribers</th>
                <th width="20%">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% if groupActivities|length %}
            {% for groupActivity in groupActivities %}
                <tr>
                    <td>{{ groupActivity.activityName }}</td>
                    <td>{{ groupActivity.description }}</td>
                    <td><span class="badge">{{ groupActivity.notificationSubscriptions|length }}</span></td>
                    <td>
                        <a href="{{ path('admin_groupactivities_show', { 'id': groupActivity.id }) }}" class="btn btn-info" role="button">show</a>
                        <a href="{{ path('admin_groupactivities_edit', { 'id': groupActivity.id }) }}" class="btn btn-primary" role="button">edit</a>
                    </td>
                </tr>
            {% endfor %}
        {% else %}
            <tr class="warning text-center">
                <td colspan="4">Group activities list is empty yet</td>
            </tr>
        {% endif %}
        </tbody>
    </table>

    <div>
        <a href="{{ path('admin_groupactivities_new') }}" class="btn btn-success" role="button">Create a new group activity</a>
    </div>

{% endblock %}
